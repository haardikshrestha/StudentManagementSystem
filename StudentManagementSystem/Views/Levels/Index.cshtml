@model IEnumerable<StudentManagementSystem.Models.Level>

@{
    ViewData["Title"] = "Index";
}

<h2>Levels</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Level</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.levelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.levelName)
            </td>
            <td>
                <a class="btn btn-secondary asp-action="Edit" asp-route-id="@item.levelId">Edit</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.levelId">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.levelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
