@model IEnumerable<StudentManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Index";
}

<h2>Attendance</h2>

<p>
    <a class="btn btn-primary" asp-action="createget" asp-controller="attendance">Create Attendance</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.courseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.levelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.groupId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.courseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.levelId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
